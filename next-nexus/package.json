{
  "name": "next-nexus",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"nodemon\" \"prisma generate --watch\" \"next dev\"",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "gen-nexus-types": "ts-node server/schema/core.ts"
  },
  "dependencies": {
    "@prisma/client": "3.15.0",
    "apollo-server-micro": "2.25.4",
    "next": "12.1.6",
    "nexus": "^1.3.0",
    "react": "18.1.0",
    "react-dom": "18.1.0"
  },
  "devDependencies": {
    "@types/node": "17.0.41",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "concurrently": "^7.1.0",
    "eslint": "8.17.0",
    "eslint-config-next": "12.1.6",
    "nodemon": "^2.0.15",
    "prisma": "3.15.0",
    "ts-node": "^10.7.0",
    "typescript": "4.7.3"
  },
  "nodemonConfig": {
    "watch": [
      "server/schema/",
      "pages/api/graphql.ts"
    ],
    "ext": "ts",
    "exec": "npm run gen-nexus-types"
  },
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  }
}
